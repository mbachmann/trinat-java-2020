<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.trinat.edu.javafx.part2.mvvm.presentation.StudentView">

   <children>
      <Label fx:id="label"  text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <TextField fx:id="input" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onEnter" />
      <Button fx:id="button" onAction="#onAction" text="OK" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>




</GridPane>
